generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  MENTOR
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model IdeaSubmission {
  id           String   @id @default(uuid())
  name         String
  email        String
  phone        String
  address      String
  role         String
  course       String?
  institution  String?
  ideaCaption  String
  description  String
  consent      Boolean
  approved     Boolean  @default(false)
  ideaId       String?
  createdAt    DateTime @default(now())
}

model Idea {
  id           String   @id @default(uuid())
  name         String
  email        String
  country      String
  description  String
  createdAt    DateTime @default(now())
  likes        Int      @default(0)
  comments     Comment[]
}

model Comment {
  id         String   @id @default(uuid())
  content    String
  author     String
  authorRole String
  createdAt  DateTime @default(now())
  likes      Int      @default(0)
  ideaId     String
  idea       Idea     @relation(fields: [ideaId], references: [id], onDelete: Cascade)
  parentId   String?  // For threaded/nested comments
  parent     Comment? @relation("CommentReplies", fields: [parentId], references: [id])
  replies    Comment[] @relation("CommentReplies")
}

